<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:elevation="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/news_title2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="8 Things You Probably Didn't Know You Can Clean With Vinegar"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/default_image1"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/news_author2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meghan Moravcik Walbert"
        android:textSize="12sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/news_source2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifehacker.com"
        android:textSize="12sp"
        android:gravity="end"
        android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>